<%-layout('layout')%>

<ul class='list-unstyled'>
	<li>
		Всего добавлено песен: <%=owner.singCount%>
	</li>
	<li><a href='/catalog/print/<%=user_id%>' target="blank">
		Показать в печатном виде
	</a></li>
	<% if (user.id==user_id) { %>
		<li>
			Показать только:
			<a href='/catalog/<%=user_id%>?status=no'>Невыученные песни</a> \
			<a href='/catalog/<%=user_id%>?status=in'>Песни в процессе изучения</a> \
			<a href='/catalog/<%=user_id%>?status=yes'>Выученные песни</a> \
			<a href='/catalog/<%=user_id%>'>Показать все</a>
		</li>
	<% } %>
</ul>

<div>
	<ul class='list-unstyled'>
		<%
			var prevAuth = "undefined";
			for (var i = 0; i<sings.length; ++i) {
				var sing = sings[i];
				if (prevAuth != sing.author ) {
					%>
						<li>&nbsp;</li>
						<li><b><%=sing.author%></b></li>
					<%
					prevAuth = sing.author;
				}
				%>
					<%-include partials/sing.ejs%>
				<%
			}
		%>
	</ul>
</div>