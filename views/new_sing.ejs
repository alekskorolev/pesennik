<%layout('layout')%>
<%script('/appjs/import.js')%>

<form role='form' action='/sing/create' method='POST'>
	<div class='alert alert-info'>
		Вы можете добавить ссылку на amdm.ru и импортировать песню, а можете заполнить все своими руками
	</div>
	<div class='form-group'>
		<label for='link'>Ссылка на <a href='http://amdm.ru' target='blank'>amdm.ru</a>, где расположена песня. Текст будет скопирован оттуда.</label>
		<div class="row">
			<div class='col-xs-5'>
				<input type='text' name='copylink2' id='link' class='form-control'>
			</div>
			<div class='col-xs-5'>
				<button class='btn btn-success' id="importButton">Импортировать</button>
				<label for='link' class='' id="Alert" style='display: none'></span>
			</div>		
		</div>
	</div>
	<div class='form-group'>
		<label for='authorOfSing'>Автор песни</label>
		<input type='text' name="author" id='authorOfSing' class='form-control' >
	</div>
	<div class='form-group'>
		<label for='nameOfSing'>Название песни</label>
		<input type='text' name="name" id='nameOfSing' class='form-control' >
	</div>
	<input type='hidden' name="copylink" id="copylink">
	<div class='form-group'>
		<label for='text'>Текст произведения</label>
		<textarea name="text" id='text' class='form-control tinymce' style='height: 200px;'></textarea>
	</div>
	<button type="submit" class="btn btn-default">Добавить песню</button>
</form>